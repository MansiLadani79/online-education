<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.student.Payment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/Dpurple3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Learning Spark"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="25dp"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/imagebrowse"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginBottom="200dp"
        app:srcCompat="@drawable/payment" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Payment"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/Dpurple3"
        android:gravity="center"
        android:layout_marginTop="350dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="420dp"
        app:cardCornerRadius="40dp"
        android:layout_marginLeft="55dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Materials for this standard is not free, If you want materials for this standard you must purchase and get this materials"
                android:gravity="center"
                android:textColor="@color/Dpurple3"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Rs. 1500"
                android:textColor="@color/Dpurple3"
                android:textSize="50dp"
                android:gravity="center"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/pay"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>